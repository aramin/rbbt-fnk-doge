{
  "name": "weltn24-doge",
  "version": "1.0.0-rc.2",
  "description": "A Content Slider micro library",
  "main": "dist/ContentSlider.min.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "BABEL_ENV=production webpack -p",
    "test": "npm run lint && npm run coverage",
    "test-dev": "ava --watch",
    "lint": "eslint src/ContentSlider.js",
    "coverage": "nyc ava",
    "coverage-html-report": "nyc report --reporter=html"
  },
  "files": [
    "dist/ContentSlider.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.dfl:defel/welt-content-slider.git"
  },
  "author": "WeltN24 Dev",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-tcomb": "^0.3.19",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.16.0",
    "browser-env": "^2.0.12",
    "eslint": "^3.8.1",
    "eslint-plugin-flowtype": "^2.23.0",
    "flow-type": "^1.0.1",
    "nyc": "^8.3.2",
    "release-it": "^2.4.3",
    "sinon": "^1.17.6",
    "tcomb": "^3.2.15",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^0.14.1"
  },
  "ava": {
    "files": [
      "src/*.spec.js"
    ],
    "require": [
      "babel-register",
      "./src/testHelper.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-flow",
      "tcomb",
      "transform-flow-strip-types",
      "transform-async-to-generator"
    ],
    "ignore": [],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "nyc": {
    "include": [
      "src/ContentSlider.js"
    ]
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.0",
    "swiper": "^3.4.0"
  }
}
